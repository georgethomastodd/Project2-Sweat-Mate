<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col">
    <h2>Create a New Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title" class="sr-only">Post title</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" placeholder="Title" required />
      </div>
      <div class="form-group">
        <label for="blog-desc" class="sr-only">Description</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc" placeholder="Description" rows="5"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
