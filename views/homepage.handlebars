<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row justify-content-around">
  
  {{#if blogs.length}}
  <div class="cold-md-6 blog-list">
    <h3>Your Posts!</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{blog.name}}</h4>
      </div>
      <div class="row mb-2">
        <p>Created on {{format_date blog.date_created}}</p>
        <p>{{blog.desc}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-description">Description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btnSubmit">Create</button>
      </div>
    </form>
  </div>

</div>



<script src="./js/blog.js"></script>








