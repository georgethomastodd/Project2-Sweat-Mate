<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col">
    <h2>Create a New Post:</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title" class="sr-only">Post title</label>
        <input class="form-control" type="text" id="blog-name" name="blog-name" placeholder="Title" required />
      </div>
      <div class="form-group">
        <label for="blog-desc" class="sr-only">Description</label>
        <textarea class="form-control" id="blog-desc" name="blog-desc" placeholder="Description" rows="5"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

<div class="row mt-4">
  <div class="col blog-list">
    <h2>Your posts!</h2>
    {{#each blogs as |blog|}}
    <div class="row">
      <div class="col">
        <h4><a href="/blogPost/{{blog.id}}">{{blog.name}}</a></h4>
        <p>{{format_date date_created}}</p>
        <p>{{blog.description}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger deleteBtn" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>


<script src="./js/blog.js"></script>
<script src="./js/deletePost.js"></script>
